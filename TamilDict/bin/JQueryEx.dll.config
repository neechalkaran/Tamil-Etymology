    </httpHandlers>
    
    <customErrors mode="Off"></customErrors>
    <trust level="Full"/>
  </system.web>
  <system.webServer>
    <httpErrors errorMode="Detailed" />
    <asp scriptErrorSentToBrowser="true"/>
  </system.webServer>
 </configuration>